<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dao.ShiroUserMapper">
    <select id="getUserByUsername" parameterType="String" resultType="ShiroUser">
        select * from shirouser where username=#{username}
    </select>
</mapper>